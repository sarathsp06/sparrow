# Docker Environment Configuration
# This file contains environment variables used by docker-compose

# Database Configuration
POSTGRES_DB=riverqueue
POSTGRES_USER=riveruser
POSTGRES_PASSWORD=riverpass
DATABASE_URL=postgres://riveruser:riverpass@postgres:5432/riverqueue?sslmode=disable

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin123

# Application Configuration
LOG_LEVEL=info
ENVIRONMENT=development

# Optional: If you want to add HTTP server later
HTTP_PORT=8080

# River UI Port
RIVERUI_PORT=8082